package com.example.atividades.atividade07;

import static org.mockito.Mockito.*;
import org.junit.jupiter.api.Test;

public class TestDatabase {

    @Test
    public void testSaveUser() {
        // Crie um mock para Database
        Database mockDatabase = mock(Database.class);

        // Crie um usuário para salvar
        User user = new User("Renata Moreno", "renatachom.dev@gmail.com");

        // Chame o método saveUser de Database
        mockDatabase.saveUser(user);

        // Verifique se o método saveUser de Database foi chamado com o usuário correto
        verify(mockDatabase, times(1)).saveUser(user);
    }
}
